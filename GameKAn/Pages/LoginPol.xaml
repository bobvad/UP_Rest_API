<Page x:Class="GameKAn.Pages.LoginPol"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GameKAn.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPol" Background="Black">

    <Grid>
        <Border Width="400" Height="380"
                Background="#1A1A1A"
                CornerRadius="15"
                Padding="25"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                BorderBrush="#444"
                BorderThickness="1">
            <StackPanel>

                <Image Source="C:\Users\student-a502.PERMAVIAT\Desktop\Новая папка\UP_Rest_API\GameKAn\Images\Knight2.png"
                       Width="80"
                       Height="80"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>

                <TextBlock Text="Вход в аккаунт"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>

                <TextBlock Text="Имя пользователя"
                           Foreground="#AAA"
                           FontSize="13"/>
                <TextBox x:Name="UsernameBox"
                         Style="{StaticResource DarkTextBoxStyle}"/>
                <TextBlock Text="Пароль"
                           Foreground="#AAA"
                           FontSize="13"/>
                <PasswordBox x:Name="PasswordBox"
                             Style="{StaticResource DarkPasswordBoxStyle}"/>

                <Button Content="Войти"
                        Style="{StaticResource DarkButtonStyle}"
                        Click="OnLoginClick"
                        Height="40"
                        Margin="0,10"/>

                <Button Content="Создать новый аккаунт"
                        Style="{StaticResource DarkOutlineButtonStyle}"
                        Click="OnGoToRegisterClick"
                        Height="36"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
